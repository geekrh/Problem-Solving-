#include <iostream>
#include "robot.h"
#define repeat(nb) for (int _loop = 1, _max = (nb) ; _loop <= _max ; _loop++)
using namespace std;

int main()
{
   int i=1;
   for (int j=0;j<10;j++) {
   int k =0 ; 
    while (k<i){
        droite();
        k++;
    }
    ramasser(); 
   while (k>0){
    gauche();
    k--;
   }
   deposer(); 
   i++;
   }
}
