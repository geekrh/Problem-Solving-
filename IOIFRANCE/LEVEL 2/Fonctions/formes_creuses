#include<bits/stdc++.h>

using namespace std ;

int main()
{
 int w,x,y,z;
 cin>>w>>x>>y>>z;

 for (int i=0;i<w;i++){
    cout<<"X";
 }
 cout<<endl ;
 for (int i=0;i<y;i++){
    cout<<"#";
 }
 cout<<endl ;
 for (int i=0;i<x-2;i++){

 for (int j=0;j<y;j++){

    if (j==0||j==y-1)
        cout<<"#";
    else
        cout<<" ";
 }
 cout<<endl ;

 }
 for (int i=0;i<y;i++){
    cout<<"#";
 }
 cout<<endl ;

for (int i=0;i<z-1;i++){
  for (int j=0;j<z-1;j++){
    if (j==i||j==0)
        cout<<"@";
    else
        cout<<" ";

  }
  cout<<endl ;
}
for (int i=0;i<z;i++){
    cout<<"@";
 }

}
